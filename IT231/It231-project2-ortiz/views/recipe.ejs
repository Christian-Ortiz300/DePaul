<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Recipes Page</title>
  <link rel="stylesheet" href="/bootstrap.css" />
  <link rel="stylesheet" href="/css/confetti_cuisine.css" />
</head>
<body>
  <div class="container">
    <div class="col-12">
      <div class="recipe-header">
        <h1>Recipes</h1>
        <p>Here are some of our favorite recipes:</p>
      </div>
      <% offeredRecipes.forEach(recipe => { %>
      <div class="recipe-container">
        <h2><%= recipe.name %></h2>
        <cite><%= recipe.cite %></cite>
        <img src="<%= recipe.img %>" alt="<%= recipe.name %> image" />

        <h3>Ingredients:</h3>
        <ul>
          <% recipe.ingredients.forEach(ingredient => { %>
          <li><%= ingredient %></li>
          <% }); %>
        </ul>

        <h3>Instructions:</h3>
        <ol>
          <% recipe.instructions.forEach(step => { %>
          <li><%= step %></li>
          <% }); %>
        </ol>
      </div>
      <% }); %>
    </div>
  </div>
</body>
